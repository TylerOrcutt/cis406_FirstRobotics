<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/contacts_Name_TextView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/contacts_Number_TextView"
        android:layout_below="@+id/contacts_Name_TextView"
        android:layout_toRightOf="@+id/contacts_Name_TextView"
        android:layout_toEndOf="@+id/contacts_Name_TextView"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="23dp" />
</LinearLayout>
